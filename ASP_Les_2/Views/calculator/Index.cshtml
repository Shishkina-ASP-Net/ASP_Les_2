@model ASP_Les_2.Models.Calculator
@{
    ViewData["Title"] = "Калькулятор";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Index" method="post">
    <div>
        <label>Первое число:</label>
        <input asp-for="FirstNumber" type="number" step="any" />
    </div>
    <div>
        <label>Второе число:</label>
        <input asp-for="SecondNumber" type="number" step="any" />
    </div>
    <div>
        <label>Операция:</label>
        <select asp-for="Operator">
            <option value="+">+</option>
            <option value="-">-</option>
            <option value="*">*</option>
            <option value="/">/</option>
        </select>
    </div>
    <div>
        <button type="submit">Вычислить</button>
    </div>
</form>

@if (Model.Result != null)
{
    <h2>Результат: @Model.Result</h2>
}
